<div class="timers_create">
  <h5>
    Add timer
  </h5>
  <div class="body">
    <div class="details">
      <div class="data">
        <div class="section">
          <label for="Timer_Name">
            Name
          </label>
          <br />
          <Input
            class="form-control"
            placeholder="timer name"
            id="Timer_Name"
            @value={{this.New_Timer_Name}}
            data-test-timer_name
          />
        </div>
        <div class="section">
          <label for="New_Timer_Is_Countdown">
            Countdown
          </label>
          <br />
          <Input
            class="form-check-input"
            @type="checkbox"
            @checked={{this.New_Timer_Is_Countdown}}
            id="New_Timer_Is_Countdown"
            data-test-iscountdown
          />
        </div>
        {{#if this.New_Timer_Is_Countdown}}
          <div class="section">
            <label for="Timer_Target_Runtime">
              Time in minutes
            </label>
            <br />
            <Input
              class="form-control"
              placeholder="Time in minutes"
              @type="number"
              id="Timer_Target_Runtime"
              @value={{this.New_Timer_Target_Runtime_In_Minutes}}
              data-test-targetruntime
            />
          </div>
          <div class="section">
            <label for="New_Timer_Is_Countdown">
              Play sound when done
            </label>
            <br />
            <Input
              class="form-check-input"
              @type="checkbox"
              @checked={{this.New_Timer_Play_Sound_When_Done}}
              id="New_Timer_Play_Sound_When_Done"
              data-test-play-sound-when-done
            />
           </div>
        {{/if}}
      </div>
      <div class="button_list">
        <label>
          Presets
        </label>
        <p>
          {{#each @presets as |aPreset|}}
            <button
              type="button"
              class="btn btn-secondary btn-sm"
              {{on 'click' (fn this.Preset
                aPreset.Name
                aPreset.Runtime_In_Minutes
                aPreset.Is_Countdown
                aPreset.Play_Sound_When_Done)
              }}
              data-test-preset-button
            >
              {{aPreset.Name}}
            </button>
          {{/each}}
        </p>
      </div>
    </div>
  </div>
  <button
    type="button"
    class="btn btn-secondary btn-sm"
    {{on 'click' @cancel}}
    data-test-cancel-button
  >
    <FaIcon @icon="ban" />
    Cancel
  </button>
  <button
    type="button"
    class="btn btn-primary btn-sm"
    {{on 'click' this.addTimer}}
    data-test-add-button
  >
    <FaIcon @icon="plus" />
    Add
  </button>
</div>