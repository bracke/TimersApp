<div ...attributes>
  <ul class="navbar-nav">
    <li class="nav-item dropdown">
      <a
        class="nav-link dropdown-toggle"
        href="#"
        id="presetDropdownMenuLink"
        role="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
        data-test-preset-menu-open-button
        {{on 'click' (fn (toggle 'show' this))}}
      >
        {{t "preset_menu.Preset_Menu_Dropdown_Name"}}
      </a>
      <ul
        data-test-preset-menu-dropdown
        class="dropdown-menu {{if this.show 'show'}}"
        aria-labelledby="presetDropdownMenuLink"
      >
        {{#each @presets as |aPreset|}}
          <li>
            <a
              href="#"
              class="dropdown-item"
              data-test-preset-button
              {{on
                'click'
                (queue
                  (fn
                    @setPreset
                    aPreset.name
                    aPreset.runtime_in_minutes
                    aPreset.is_countdown
                    aPreset.play_sound_when_done
                  )
                  (toggle 'show' this)
                )
              }}
            >
              {{aPreset.name}}
            </a>
          </li>
        {{/each}}
      </ul>
    </li>
  </ul>
</div>
{{yield}}